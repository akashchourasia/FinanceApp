<center>
    <h1>MY FRIENDS</h1>
</center>
<h3>Search for Friends</h3>
<div id="friend-lookup">
    <%= form_tag search_friends_path, remote: true, method: :get, id: "friend-lookup-form" do %>
        <div class="form-group row no-padding text-center col-md-10">
            <div class="col-md-12">
                <%= text_field_tag :search_param, params[:search_param],
                placeholder: " Enter Name or Email", autofocus: true,
                class: "form-control search-box input-lg" %>
            </div>
        </div>
        <div class="col-md-2">
            <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
            <i class="fa fa-search"></i> Search Friends
            <% end %>
        </div>
    <% end %>
</div><br><br><br>
<div id="results">
    <%= render 'friends/result' %>
</div>